  <!--      <FilesToDelete Include="$(OutputPath)/*" Exclude="$(OutputPath)/LatihasExport*"/>-->
  <!--    </ItemGroup>-->
  <!--    <Delete Files="@(FilesToDelete)"/>-->
  <!--  </Target>-->
</Project>